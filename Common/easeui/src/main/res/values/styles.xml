<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" >

    <style name="ChatMsgItemStyle">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ChatMsgBubbleStyle">
        <item name="android:minHeight">36dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ChatMsgLeftBubbleStyle" parent="ChatMsgBubbleStyle">
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:background">@drawable/ease_chatfrom_bg</item>
    </style>

    <style name="ChatMsgRightBubbleStyle" parent="ChatMsgBubbleStyle">
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:background">@drawable/ease_chatto_bg</item>
    </style>

    <style name="BubbleImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:maxWidth">120dp</item>
        <item name="android:minWidth">30dp</item>
        <item name="android:maxHeight">100dp</item>
        <item name="android:minHeight">30dp</item>
    </style>

    <style name="BubbleLeftImageStyle" parent="BubbleImageStyle">
    </style>

    <style name="BubbleRightImageStyle" parent="BubbleImageStyle">
    </style>

    <style name="ChatRoleTextStyle">
        <item name="android:textSize">@dimen/font_size_10</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>