<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ChatRowItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="ChatRowMsgTimeStyle">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_12</item>
        <item name="android:background">@drawable/ease_timestampe_bg</item>
    </style>

    <style name="ChatRowProgressBarStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="ChatRowAvatarStyle" parent="@style/DefaultRoundCornerHeadStyle" />

    <style name="ChatRowNickStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
    </style>

    <style name="ChatRowGroupRoleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/font_size_10</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ChatRowUserRoleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/font_size_10</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ChatRowBubbleStyle">
        <item name="android:maxWidth">@dimen/row_bubble_max_width</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ChatRowLeftBubbleStyle" parent="@style/ChatRowBubbleStyle">
        <item name="android:background">@drawable/bg_youchat</item>
    </style>

    <style name="ChatRowRightBubbleStyle" parent="@style/ChatRowBubbleStyle">
        <item name="android:background">@drawable/bg_mechat_white</item>
    </style>

    <style name="ChatRowMsgTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:lineSpacingExtra">3dp</item>
    </style>

    <style name="ChatRowResendStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/icon_chat02</item>
    </style>

</resources>