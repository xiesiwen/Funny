<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/dimen_6"
    android:paddingTop="@dimen/dimen_6">

    <RelativeLayout
        android:id="@+id/layout_news_icon"
        android:layout_width="72dp"
        android:layout_height="60dp">

        <com.qingqing.base.view.AsyncImageViewV2
            android:id="@+id/icon"
            style="@style/DefaultRoundCornerHeadStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_6"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginRight="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_6"
            android:padding="0dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/img_unread_remain"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/dimen_8"
            android:layout_marginTop="@dimen/dimen_3"
            android:scaleType="fitXY"
            android:src="@drawable/item_new_ind_icon"
            android:visibility="gone" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_system_message_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_12"
        android:layout_toRightOf="@id/layout_news_icon"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/dimen_5"
        android:maxLines="2"
        android:textColor="@color/gray_dark_deep"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_system_message_content"
        android:layout_below="@id/tv_system_message_content"
        android:layout_marginTop="@dimen/dimen_6"
        android:textColor="@color/gray_dark"
        android:textSize="@dimen/font_size_14" />

</RelativeLayout>