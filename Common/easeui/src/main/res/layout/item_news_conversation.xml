<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="72dp"
        android:layout_height="60dp">

        <com.qingqing.base.view.AsyncImageViewV2
            android:id="@+id/img_conversation_icon"
            style="@style/DefaultRoundCornerHeadStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/dimen_6"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginRight="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_6"
            android:padding="0dp"
            android:scaleType="fitXY" />

        <com.qingqing.base.view.badge.StrokeBadgeView
            android:id="@+id/view_unread_digit_remain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/dimen_6"
            android:layout_marginTop="@dimen/dimen_3"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_unread_remain"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/dimen_8"
            android:layout_marginTop="@dimen/dimen_3"
            android:scaleType="fitXY"
            android:src="@drawable/item_new_ind_icon"
            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_6"
        android:paddingRight="@dimen/dimen_12"
        android:paddingTop="@dimen/dimen_6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_conversation_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimen_6"
                    android:singleLine="true"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/tv_conversation_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/font_size_14" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_conversation_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_12"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/font_size_14" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_conversation_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_6"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_conversation_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/tv_conversation_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_12"
                android:background="@drawable/shape_corner_rect_gray_dark_solid"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_10"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>