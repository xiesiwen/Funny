<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light_light"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_8"
        android:paddingTop="@dimen/dimen_8">

        <com.qingqing.base.view.editor.LimitEditText
            android:id="@+id/text_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8"
            android:layout_weight="1"
            android:background="@drawable/round_rect_solid_gray_light_deep"
            android:drawableLeft="@drawable/icon_search_tip"
            android:drawablePadding="@dimen/dimen_12"
            android:hint="@string/text_search"
            android:paddingLeft="@dimen/dimen_12"
            android:paddingBottom="@dimen/dimen_6"
            android:paddingTop="@dimen/dimen_6"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_dark"
            android:textSize="@dimen/font_size_16"/>

        <TextView
            android:id="@+id/text_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_12"
            android:paddingRight="@dimen/dimen_12"
            android:text="@string/text_cancel"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_1">

        <ListView
            android:id="@+id/list_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="@dimen/dimen_1" />
    </RelativeLayout>
</LinearLayout>