<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ttn="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="@string/gag_tip"
            android:textColor="@color/gray_dark" />

        <com.qingqing.base.view.setting.SettingToggleValueItem
            android:id="@+id/set_all_user_gag"
            style="@style/MyProfileSettingItemStyle"
            ttn:hasSettingAction="false"
            ttn:showUnderLine="false"
            ttn:titleString="@string/all_user_gag" />

        <TextView
            android:id="@+id/gag_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="@string/gag_user"
            android:textColor="@color/gray_dark"
            android:visibility="gone" />

        <com.qingqing.base.view.AtMostListView
            android:id="@+id/lv_gag_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/transparent" />
    </LinearLayout>

</ScrollView>