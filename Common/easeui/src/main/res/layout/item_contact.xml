<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/item_partition_content"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/bg_list_item_color">

    <RelativeLayout
        android:id="@id/swipelist_backview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingBottom="6dp"
        android:paddingTop="6dp">

    </RelativeLayout>


    <LinearLayout
        android:id="@id/swipelist_frontview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <com.qingqing.base.view.AsyncImageViewV2
            android:id="@id/img_avatar"
            style="@style/DefaultCircleHeadStyle" />

        <TextView
            android:id="@id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black_light"
            android:textSize="@dimen/font_size_16" />

    </LinearLayout>
</RelativeLayout>