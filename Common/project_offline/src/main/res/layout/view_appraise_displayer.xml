<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_12"
    android:paddingTop="@dimen/dimen_12">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/view_appraise_tv_appraise_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/text_course_appraise_title"
            android:textColor="@color/gray_dark_deep"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/view_appraise_tv_appraise_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/view_appraise_tv_appraise_title"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/font_size_14" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/view_appraise_rating_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_6"
        android:layout_marginTop="@dimen/dimen_6"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_base_appraise_total_score"
            android:textColor="@color/gray_dark_deep"
            android:textSize="@dimen/font_size_14" />


        <com.qingqing.base.view.ratingbar.AutoResizeRatingBar
            android:id="@+id/rb_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_5"
            android:isIndicator="true"
            android:stepSize="0.5" />

        <TextView
            android:id="@+id/tv_service_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_12"
            android:textColor="@color/gray_dark_deep"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/tv_effect_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_12"
            android:textColor="@color/gray_dark_deep"
            android:textSize="@dimen/font_size_14" />

    </LinearLayout>

    <com.qingqing.base.view.TagLayout
        android:id="@+id/view_appraise_tag_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_6"
        android:horizontalSpacing="@dimen/dimen_6"
        android:verticalSpacing="@dimen/dimen_6"
        android:visibility="gone" />

    <TextView
        android:id="@+id/view_appraise_tv_appraise_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_6"
        android:textColor="@color/gray_dark_deep"
        android:textSize="@dimen/font_size_14" />

    <!-- 图片 -->
    <com.qingqing.base.view.AtMostGridView
        android:id="@+id/view_appraise_grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12"
        android:horizontalSpacing="@dimen/dimen_6"
        android:numColumns="3"
        android:verticalSpacing="@dimen/dimen_6"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/view_appraise_layout_teacher_reply_appraise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_6"
        android:visibility="gone">

        <View
            android:id="@+id/view_appraise_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/gray_light_deep" />

        <TextView
            android:id="@+id/view_appraise_teacher_reply_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/view_appraise_divider"
            android:layout_marginTop="@dimen/dimen_6"
            android:text="@string/text_course_teacher_feedback"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/view_appraise_teacher_reply_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/view_appraise_teacher_reply_title"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/view_appraise_teacher_reply_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_appraise_teacher_reply_title"
            android:layout_marginTop="@dimen/dimen_6"
            android:textColor="@color/gray_dark_deep"
            android:textSize="@dimen/font_size_14" />

    </RelativeLayout>
</LinearLayout>