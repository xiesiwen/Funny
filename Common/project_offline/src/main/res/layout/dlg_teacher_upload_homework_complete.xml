<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
    android:background="@drawable/shape_corner_rect_transblack_solid"
    android:paddingLeft="@dimen/dimen_35"
    android:paddingRight="@dimen/dimen_35"
    android:paddingTop="@dimen/dimen_12"
    android:paddingBottom="@dimen/dimen_24">
    <ImageView
        android:id="@+id/iv_image"
        android:src="@drawable/icon_preparation_yes"
        android:layout_margin="@dimen/dimen_24"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/text"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/dimen_12"
        android:layout_marginRight="@dimen/dimen_12"/>

</LinearLayout>