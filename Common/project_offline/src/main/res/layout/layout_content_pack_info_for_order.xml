<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_content_pack_info_for_order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dimen_6"
    android:paddingTop="@dimen/dimen_6">

    <LinearLayout
        android:id="@+id/layout_content_pack_info_head_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/layout_content_pack_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black_light"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/layout_content_pack_info_course_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_6"
            android:background="@drawable/shape_corner_rect_orange_light_solid"
            android:paddingLeft="@dimen/dimen_1"
            android:paddingRight="@dimen/dimen_1"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_10" />

    </LinearLayout>

    <TextView
        android:id="@+id/layout_content_pack_info_nick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_content_pack_info_head_name"
        android:layout_marginTop="@dimen/dimen_6"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/gray_dark_deep"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/layout_content_pack_info_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_content_pack_info_nick"
        android:layout_marginTop="@dimen/dimen_6"
        android:layout_toLeftOf="@+id/layout_content_pack_info_price"
        android:textColor="@color/gray_dark_deep"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/layout_content_pack_info_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/layout_content_pack_info_summary"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:text="@string/text_format_amount"
        android:textColor="@color/accent_orange"
        android:textSize="@dimen/font_size_16" />

</RelativeLayout>