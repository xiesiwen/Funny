<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/dimen_10"
              android:paddingLeft="@dimen/dimen_12"
              android:paddingRight="@dimen/dimen_5"
              android:paddingTop="@dimen/dimen_10"
    >


    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="25dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/dimen_12"
        android:src="@drawable/icon_unselected_studentresouce"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.qingqing.base.view.AsyncImageViewV2
            android:id="@+id/iv_avatar"
            style="@style/DefaultRoundCornerHeadStyle"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            />

        <ImageView
            android:id="@+id/iv_admin_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_chat_gly"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_alignLeft="@id/iv_avatar"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_5"
            android:layout_toRightOf="@id/iv_avatar"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_nick_and_teach_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="@dimen/dimen_5"
                android:layout_marginTop="@dimen/dimen_5"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_16"
                tools:text="上海某个老师昵称非常长上海某个老师昵称非常长"
                />

            <TextView
                android:id="@+id/tv_nick_and_phone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="老师昵称外加非常长的手机号1221213214324234234234"
                />

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>