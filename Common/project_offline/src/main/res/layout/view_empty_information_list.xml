<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_empty_information_list" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24"
        android:text="@string/teacher_information_empty_tips"
        android:textColor="@color/gray_dark"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/tv_empty_create_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12"
        android:background="@drawable/shape_corner_rect_blue_dark_stroke"
        android:paddingBottom="@dimen/dimen_6"
        android:paddingLeft="@dimen/dimen_24"
        android:paddingRight="@dimen/dimen_24"
        android:paddingTop="@dimen/dimen_6"
        android:text="@string/teacher_information_create"
        android:textColor="@color/accent_blue_dark"
        android:textSize="@dimen/font_size_14" />
</LinearLayout>


