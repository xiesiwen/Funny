<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/ActivityDefaultTransitionAnimation</item>
    </style>

    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_dialog_out</item>
    </style>

    <style name="ActivityDefaultTransitionAnimation" parent="@android:style/Animation.Activity">

        <item name="android:activityOpenEnterAnimation">@anim/activity_slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_slide_out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_slide_in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_slide_out_to_right</item>
        <!--<item name="android:fragmentOpenEnterAnimation">@animator/fragment_open_enter</item>
        <item name="android:fragmentOpenExitAnimation">@animator/fragment_open_exit</item>
        <item name="android:fragmentCloseEnterAnimation">@animator/fragment_close_enter</item>
        <item name="android:fragmentCloseExitAnimation">@animator/fragment_close_exit</item>
        <item name="android:fragmentFadeEnterAnimation">@animator/fragment_fade_enter</item>
        <item name="android:fragmentFadeExitAnimation">@animator/fragment_fade_exit</item>-->
    </style>

    <style name="ProgressBarCompatStyle">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDuration">1000</item>
    </style>


</resources>